<body>
  <div class="container" id="auth-container">
    <!-- Content will be injected by JS -->
  </div>

  <script>
    // Initial state
    let isSignup = true;
    const container = document.getElementById('auth-container');

    function renderForm() {
      container.innerHTML = `
        <div class="emoji">${isSignup ? 'ðŸŽ‰' : 'ðŸ‘‹'}</div>
        <div class="title">${isSignup ? 'Create Account' : 'Login'}</div>
        <form id="auth-form">
          <div class="input-group">
            <label for="username">Username</label>
            <input required type="text" id="username" name="username" placeholder="Your username">
          </div>
          <div class="input-group">
            <label for="password">Password</label>
            <input required type="password" id="password" name="password" placeholder="Your password">
          </div>
          <div class="btn-group">
            <button type="submit" class="fun-btn">${isSignup ? 'Sign Up' : 'Login'}</button>
          </div>
        </form>
        <span class="switch-link" id="switch-link">
          ${isSignup ? 'Already have an account? Login' : "Don't have an account? Create one"}
        </span>
      `;

      document.getElementById('switch-link').onclick = () => {
        isSignup = !isSignup;
        renderForm();
      };

      document.getElementById('auth-form').onsubmit = (e) => {
        e.preventDefault();
        const username = e.target.username.value;
        const password = e.target.password.value;
        alert((isSignup ? "Account created for " : "Welcome back, ") + username + "!\n(Just for fun, not real auth!)");
        e.target.reset();
      };
    }

    renderForm();
  </script>
